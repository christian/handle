<div class="prepend-8 span-8 append-8 last">
  <% form_for @user_session do |f| -%>
    <fieldset>
    <legend>  Login on handle </legend>
    <% if flash[:error] %>
    <div class="error">
      <%= flash[:error] %>
    </div>
    <% end %>

    <p>
      <%= f.label :username, "Username" %>
      <%= f.text_field :username, :class => 'text' %>
    </p>
    <p>
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, :class => 'text' %>
    </p>
    <%= f.submit "Login", :disable_with => 'Loging in...' %>
    
    <!-- <h2>Or use OpenID</h2>
    <p>
      <%#= f.label :openid_identifier, "Openid URL" %>
      <%#= f.text_field :openid_identifier, :class => 'text' %>
    </p>
    <%#= f.submit 'Login', :disable_with => 'Loging with OpenID...' %> -->
    
    </fieldset>
  <% end -%>
</div>  

