<%= render :partial => "menu" %>

<script type="text/javascript" charset="utf-8">
  $(function(){
    $("#csv_button").click(function(){
      date_from = $("#from_From_1i").val() + "-" + 
                  $("#from_From_2i").val() + "-" +
                  $("#from_From_3i").val();
                   
      date_until =  $("#until_From_1i").val() + "-" + 
                    $("#until_From_2i").val() + "-" +
                    $("#until_From_3i").val();
      var new_link = "/reports/" + date_from + "/" + date_until + "/csv"
      $("#dates_form").attr("action", new_link);
      
      $("#dates_form").submit();
      return false;
    })
    
    $("#html_button").click(function(){
      date_from = $("#from_From_1i").val() + "-" + 
                  $("#from_From_2i").val() + "-" +
                  $("#from_From_3i").val();
                   
      date_until =  $("#until_From_1i").val() + "-" + 
                    $("#until_From_2i").val() + "-" +
                    $("#until_From_3i").val();
      var new_link = "/reports/" + date_from + "/" + date_until + "/html"
      $("#dates_form").attr("action", new_link);
      
      $("#dates_form").submit();
      return false;
    })
    
  })
</script>

<h2>Reports</h2>

<div style="text-align: center;">
  <% form_tag({:action => statistics_from_until_gen_report_path(@start_date, @end_date, :format => "html")}, {:id => "dates_form"}) do %>
    From: <%= date_select :from, "From", :default => Date.parse(@start_date)  %> 
    Until: <%= date_select :until, "From", :default => Date.parse(@end_date)  %> 
    
    <div style="text-align: center; padding-left: 350px;">
    <%= link_to "Generate csv file", "", :id => "csv_button", :class => "button" %>
    <%= link_to "View html report", "", :id => "html_button", :class => "button" %>
    </div>
  <% end %>
</div>
<div class="clear"></div>
  
