<h2><%= link_to 'Users', users_path %> &raquo; <%= @user.name %></h2>

<%= render :partial => "shared/notice" %>

<p>
  <b>Name:</b>
  <%=h @user.name %>
</p>

<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Is superadmin:</b>
  <%=h @user.is_superadmin %>
</p>

<p>
  <b>Is member:</b>
  <%=h @user.is_member %>
</p>

<h3>Projects</h3>
<ul>
  <% for p in current_user.projects %>
    <li><%= p.name %></li>
  <% end %>
</ul>

<p>
  Todo: view cristi's tasks. etc.
</p>

<% if current_user.is_superadmin %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back to users', users_path %>
