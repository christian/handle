<% if tasks.empty? %>
  <div class="notice">
    No tasks for you at this project.
  </div>
<% else %>
    <table>
      <tr>
        <th>Kind</th>
        <th>Title</th>
        <th>Opener</th>
        <th>Time</th>
        <th>Priority</th>
        <!-- <th>Kind</th> -->
        <th>Status</th>
        <th>Resolution</th>
      </tr>

    <% @tasks.each do |task| %>
      <tr class="<%= cycle('even', '') %>">
        <td style="width: 8%;"><div class="<%= task.kind %>">&nbsp;</div></td>
        <td><%=link_to task.title, task %><br />
        <span class="quiet small">Last change <%= time_ago_in_words(task.updated_at) %> ago</span>
        </td>
        <td style="width: 9%;"><%=h task.opener.name %></td>
        <td class="small" style="width: 14%;">Estimated: <%=h task.estimated_time %><br />
            Spent: <%=humanized_duration task.time_spent %>
        </td>
        <td style="width: 5%;"><%= "<span class=\"ss_sprite ss_bullet_red\" style=\"margin-left: -11px;\"></span>" * task.priority %></td>
        <td style="width: 5%;"><strong class="<%=h task.status %>"><%=h task.status %></strong></td>
        <td style="width: 5%;">
          <% if task.resolution == "In progress"%>
            <span class="ss_sprite ss_cog"></span>
          <% else %>
            <span class="ss_sprite ss_tick"></span>
          <% end %><small><%= task.resolution %></small>
        </td>
        <td style="width: 4%;"><%= link_to '',  "/changes/new?height=600&width=600&inlineId=hiddenModalContent&task_id=#{task.id}" , :class => 'thickbox ss_sprite ss_time_add', :title => 'Add time for task' %></td>
        <td style="width: 4%;"><%= link_to '',  "/changes/new?height=600&width=600&inlineId=hiddenModalContent&task_id=#{task.id}" , :class => 'thickbox ss_sprite ss_comment_add', :title => 'Close task' %></td>
        <td style="width: 4%;"><%= link_to '',  "/changes/new?height=600&width=600&inlineId=hiddenModalContent&task_id=#{task.id}" , :class => 'thickbox ss_sprite ss_cross', :title => 'Close task' %></td>
      </tr>
    <% end %>
    </table>
<% end %>

<hr />

<%= will_paginate @tasks %>
