<%= javascript_include_tag 'pagination' %>

<div class="span-20">
  <div class="span-17">
    <h2><%= if params[:user_id] then User.find(params[:user_id]).name else "Your" end %> tasks</h2>
  </div>
  <div class="span-3 last">
    <%= link_to '&nbsp; New task &nbsp; ', '/tasks/new?height=600&width=600&inlineId=hiddenModalContent', :class => 'button thickbox', :title => 'Add new task' %>
  </div>

  <div class="span-20 last" id="tasks_list">
    <%= render :partial => 'tasks_list', :locals => {:tasks => @tasks} %>
  </div>

</div>

<div class="span-4 last">
  <div style="background-color: #75CC28; color: white; padding: 7px;">
    Project &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

  <%= select_tag 'project', options_for_select(projects_collection, @select_index.to_i), 
      {:onchange => "#{remote_function(:url  => "#{get_tasks_tasks_path}",
                                       :method => :get,
                                       :with => "'project_id='+ $(\"\#project\").val()"
                                      )
                      }"
      } %>
      
  </div>

  <div style="background-color: #F26522; color: white; padding: 7px;">
    <strong>Filter</strong> <br />
    <p>    
    <%= check_box_tag :show_features, :show_features, true %>bugs <br />
    <%= check_box_tag :show_features, :show_features, true %>features <br />
    </p>    
    <hr />
    <p>    
    <%= check_box_tag :show_features, :show_features, true %>closed <br />
    <%= check_box_tag :show_features, :show_features, true %>active <br />
    </p>  
    <hr />
    <p>    
    <%= check_box_tag :show_features, :show_features, true %>won't fix <br />
    <%= check_box_tag :show_features, :show_features, true %>completed <br />
    </p>  
    </div>
  
</div>
